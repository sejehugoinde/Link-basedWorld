{
    "Title": "Crash Landing on Mars: A Journey Home",
    "Credits": "Created by Sandra Sorensen (sasorens@ucsc.edu).",
    "InitialLocation": "Crash Site on Mars",
    "Locations": {
        "Crash Site on Mars": {
            "Body": "You are standing in front of your broken space ship and need to gather supplies in order to repair it",
            "Choices": [
                {
                    "Text": "Go right to your space ship",
                    "Target": "Walk right"
                },
                {
                    "Text": "Go left to your space ship",
                    "Target": "Walk left"
                }
            ]
        },
        "Walk right": {
            "Body": "In your search for supplies to your broken space ship, you encounter a Martian patrol",
            "Choices": [
                {
                    "Text": "Run away from the Martian patrol",
                    "Target": "Run away from the Martian"
                },
                {
                    "Text": "Kill the Martian patrol",
                    "Target": "Kill the Martian"
                }
            ]
        },
        "Run away from the Martian": {
            "Body": "You have safely run away from the Martian patrol and now you see a Space Café in the horizon",
            "Choices": [
                {
                    "Text": "Go to Space Café",
                    "Target": "Space Café"
                },
                {
                    "Text": "Go back to the Martian patrol",
                    "Target": "Walk right"
                }
            ]
        },
        "Kill the Martian": {
            "Body": "You encounter the Martian patrol. In a heated fight where you got some bruises, you won and now the Martian patrol is dead",
            "Choices": [
                {
                    "Text": "Loot the Martian patrol",
                    "Target": "Loot the Martian"
                },
                {
                    "Text": "Go back the way you came from",
                    "Target": "Walk right"
                }
            ]
        },
        "Loot the Martian": {
            "Body": "You found some coins and food",
            "Choices": [
                {
                    "Text": "Continue further on your journey",
                    "Target": "Walk left"
                },
                {
                    "Text": "Go back the way you came from",
                    "Target": "Walk right"
                }
            ],
            "Items": ["Coins", "Food"]
        },
        "Walk left": {
            "Body": "A Space Café is now in your horizon",
            "Choices": [
                {
                    "Text": "Go back to your space ship",
                    "Target": "Crash Site on Mars"
                },
                {
                    "Text": "Go inside Space Café",
                    "Target": "Space Café"
                }
            ]
        },
        "Space Café": {
            "Body": "You are now inside the Space Café",
            "Choices": [
                {
                    "Text": "Go outside the Space Café",
                    "Target": "Walk left"
                },
                {
                    "Text": "Go to the Bartender's Corner",
                    "Target": "Bartender's Corner"
                }
            ]
        },
        "Bartender's Corner": {
            "Body": "You are in front of the bartender, but don't know what he is saying",
            "Choices": [
                {
                    "Text": "Take Translation Device",
                    "Target": "Translation Device"
                },
                {
                    "Text": "Go outside the Space Café",
                    "Target": "Walk left"
                }
            ]
        },
        "Translation Device": {
            "Body": "Now you understand what the bartender is saying",
            "Choices": [
                {
                    "Text": "Purchase ship supplies",
                    "Target": "Purchase Ship Supplies"
                },
                {
                    "Text": "Put the Translation Device back",
                    "Target": "Bartender's Corner"
                }
            ],
            "Items": ["Translation Device"],
            "Interactive": true 

        },
        "Purchase Ship Supplies": {
            "Body": "You have bought all the necessary supplies in order to repair the ship",
            "Choices": [
                {
                    "Text": "Tip the bartender",
                    "Target": "Tip"
                },
                {
                    "Text": "Repair the ship",
                    "Target": "Ship Repair"
                }
            ],
            "Interactive": true 
        },
        "Tip": {
            "Body": "You have tipped the bartender and are ready to go back and repair the ship",
            "Choices": [
                {
                    "Text": "Purchase ship supplies",
                    "Target": "Purchase Ship Supplies"
                },
                {
                    "Text": "Repair the ship",
                    "Target": "Ship Repair"
                }
            ]
        },
        "Ship Repair": {
            "Body": "You have now repaired the ship and are ready to take off and go to Earth",
            "Choices": [
                {
                    "Text": "Departure Point",
                    "Target": "Departure Point"
                }
            ]
        },
        "Departure Point": {
            "Body": "Away is good but home is best. Earth here we come."
        }
    }
